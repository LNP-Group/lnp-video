---
import Landing from "../layouts/Landing.astro";

import '../styles/global.scss';
import "../styles/home.scss";

---

<Landing 
	title="LNP Video"
	description="LNP Video is the new website for watching videos from LNP Group"
	twitterCard="summary_large_image"
	twitterSite="@LNP_Group"
	twitterCreator="@LNP_Group"
	twitterTitle="LNP Video"
	twitterDescription="LNP Video is the new website for watching videos from LNP Group"
	twitterImage="https://video.lnp-group.com/images/posters/lnp-video.png"
	twitterImageAlt="LNP Video"
	ogTitle="LNP Video"
	ogDescription="LNP Video is the new website for watching videos from LNP Group"
	ogImage="https://video.lnp-group.com/images/posters/lnp-video.png"
	ogImageAlt="LNP Video"
	ogUrl="https://video.lnp-group.com"
	ogSiteName="LNP Video"
	ogType="website"
	ogLocale="en_US"
	ogLocaleAlternate="ro_RO"
	canonical="https://video.lnp-group.com"
	alternate="https://video.lnp-group.com/ro-ro"
>
	<div class="body">
		<header>
			<div class="container">
				<div class="row">
					<div class="col-12">
						<h1 class="text-center">LNP Video</h1>
						<p class="text-center">LNP Video is the new website for watching videos from LNP Group</p>
					</div>
				</div>
			</div>
			<div class="image-background"></div>
			<div class="color-background"></div>
		</header>
	</div>
</Landing>
