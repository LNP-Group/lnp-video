---
import MainLayout from "../../layouts/MainLayout.astro";

import '../../styles/global.scss';
import "../../styles/settings.scss";

---

<MainLayout 
	title="Settings | LNP Video"
	description="LNP Video is the new website for watching videos from LNP Group"
	twitterCard="summary_large_image"
	twitterSite="@LNP_Group"
	twitterCreator="@LNP_Group"
	twitterTitle="Settings | LNP Video"
	twitterDescription="LNP Video is the new website for watching videos from LNP Group"
	twitterImage="https://video.lnp-group.com/images/posters/lnp-video.png"
	twitterImageAlt="LNP Video"
	ogTitle="Settings | LNP Video"
	ogDescription="LNP Video is the new website for watching videos from LNP Group"
	ogImage="https://video.lnp-group.com/images/posters/lnp-video.png"
	ogImageAlt="LNP Video"
	ogUrl="https://video.lnp-group.com/settings"
	ogSiteName="LNP Video"
	ogType="website"
	ogLocale="en_US"
	ogLocaleAlternate="ro_RO"
	canonical="https://video.lnp-group.com/watch/settings"
	alternate="https://video.lnp-group.com/ro-ro/vizionează/setări"
>
    <main>
        <h1>Settings</h1>
        <h2>Language</h2>
        <div class="language" id="language">
            English
            <div class="language-picker" id="language-picker">
                <a href="/watch/">English</a>
                <a href="/ro-ro/vizionează/">Română</a>
            </div>
        </div>

        <h2>Theme</h2>
        <select name="theme" id="theme">
            <option value="light">Light</option>
            <option value="dark">Dark</option>
        </select>

		<h2>Avatar</h2>
		<select name="avatar" id="avatar">
			<option value="default">Default</option>
			<option value="lego">LEGO</option>
			<option value="lnp-group">LNP Group</option>
			<option value="lnp-productions">LNP Production</option>
			<option value="ninjago">Ninjago</option>
			<option value="lloyd">Lloyd</option>
			<option value="kai">Kai</option>
			<option value="zane">Zane</option>
			<option value="jay">Jay</option>
			<option value="cole">Cole</option>
			<option value="nya">Nya</option>
			<option value="master-wu">Master Wu</option>
		</select>

		<h2>Username</h2>
		<form id="username-form">
			<input type="text" name="username" id="username" placeholder="Username">
			<button type="submit">Change</button>
		</form>

    </main>

    <script type="text/javascript" src="/scripts/settings.js"></script>

</MainLayout>